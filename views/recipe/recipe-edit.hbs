<div id="edit-recipe-form">
  <h3> Edit recipe: {{recipe.title}} </h3>

  <form class="row g-3" action="/recipe/{{recipe._id}}/edit" method="POST" enctype="multipart/form-data">
    <div class="col-12">
      <label class="form-label">Title</label>
      <br />
      <input type="text" name="title" value="{{recipe.title}}" />
      <input type="hidden" name="author" value="{{userData._id}}" />
    </div>
    <div class="col-12">
      <label class="form-label">Content</label>
      <br />
      <textarea name="content" type="text" cols="20" rows="2" value="{{recipe.content}}">{{recipe.content}}</textarea>
    </div>
    <div class="col-12">
      <label class="form-label">Cover image</label>
      <br />
      <input type="file" name="recipe-cover-image" value="{{recipe.imageURL}}" />
    </div>

    <div class="col-12">
      <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
  </form>

</div>