<div id="form">
  <h2>Signup</h2>

  {{#if errorMessage}}
    <div class="error">
      <p>{{errorMessage}}</p>
      {{#each missingFields}}
        {{#if this}}
          {{@key}}
          is missing
          <br />
        {{/if}}
      {{/each}}
    </div>
  {{/if}}

  <form action="/auth/signup" method="POST">

    <label>
      Username
      <input type="text" name="username" placeholder="ironhacker" />
    </label>

    <label>
      Email
      <input type="email" name="email" placeholder="ironhacker@ironhack.com" />
    </label>

    <label>
      Password
      <input type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">Create account</button>

  </form>
</div>